% section et al.

\def\sectionsymbol{}
\def\subsectionsymbol{}
\def\subsubsectionsymbol{}

\def\section{%
  \def\@sectsymbol{\sectionsymbol}%
  \@startsection{section}{1}{\z@}%
  {3.5ex \@plus 1ex \@minus .2ex}%
  {1.5ex \@plus .2ex}%
  {\reset@font\large\bfseries\mathversion{bold}}}

\def\subsection{%
  \def\@sectsymbol{\subsectionsymbol}%
  \@startsection{subsection}{2}{\z@}%
  {2.5ex \@plus 1ex \@minus .2ex}%
  {1ex \@plus .2ex}%
  {\reset@font\normalsize\bfseries\mathversion{bold}}}

\def\subsubsection{%
  \def\@sectsymbol{\subsubsectionsymbol}%
  \@startsection{subsubsection}{3}{\z@}%
  {2.5ex \@plus 1ex \@minus .2ex}%
  {1ex \@plus .2ex}%
  {\reset@font\normalsize\bfseries\mathversion{bold}}}

\def\paragraph{%
  \@startsection{paragraph}{4}{\z@}%
  {2ex \@plus 1ex \@minus .2ex}%
  {-1em}%
  {\reset@font\normalsize\bfseries\mathversion{bold}}}

\def\subparagraph{%
  \@startsection{subparagraph}{5}{\z@}%
  {2ex \@plus 1ex \@minus .2ex}%
  {-1em}%
  {\reset@font\normalsize\bfseries\mathversion{bold}}}

\def\@sect#1#2#3#4#5#6[#7]#8{%
  \ifnum #2>\c@secnumdepth%
    \let\@svsec\@empty%
  \else%
    \refstepcounter{#1}%
    \protected@edef\@svsec{\@sectsymbol\@seccntformat{#1}\relax}%
  \fi%
  \@tempskipa #5\relax%
  \ifdim \@tempskipa>\z@%
    \begingroup%
      #6{%
        \@hangfrom{\hskip #3\relax\@svsec}%
          \interlinepenalty \@M #8\@@par}%
    \endgroup%
    \csname #1mark\endcsname{#7}%
    \addcontentsline{toc}{#1}{%
      \ifnum #2>\c@secnumdepth%
      \else%
        \@sectsymbol\protect\numberline{\csname the#1\endcsname}%
      \fi%
      #7}%
  \else%
    \def\@svsechd{%
      #6{\hskip #3\relax%
      \@svsec #8}%
      \csname #1mark\endcsname{#7}%
      \addcontentsline{toc}{#1}{%
        \ifnum #2>\c@secnumdepth%
        \else%
          \@sectsymbol\protect\numberline{\csname the#1\endcsname}%
        \fi%
        #7}}%
  \fi%
  \@xsect{#5}}

% appendix

\def\appendixsymbol{}
\def\subappendixsymbol{}
\def\subsubappendixsymbol{}

\def\appendix{%
  \par%
  \setcounter{section}{0}%
  \setcounter{subsection}{0}%
  \setcounter{subsubsection}{0}%
  \def\sectionsymbol{\appendixsymbol}%
  \def\subsectionsymbol{\subappendixsymbol}%
  \def\subsubsectionsymbol{\subsubappendixsymbol}%
  \def\thesection{\@Alph\c@section}}
